<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <div style="width: 100%;">
  <div style="float:left; width: 30%">
    <img src="https://images.unsplash.com/photo-1565992441121-4367c2967103?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8c2tpfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60" alt="skier-shredding" width="100%" height="100%" style="float: left; object-fit: cover;">
  </div>
  <div class="container" style="padding-left: 25%; padding-top: 10%;">
    
    <h1 class="text-primary">Login</h1>
    <div class="row">
      <form action="/login" method="POST">
          <div class="mb-3 mt-3">
              <label for="name" class="form-label">Username: </label>
              <input type="text" name="username" id="name" placeholder="Username" required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3 mt-3">
              <label for="password" class="form-label">Password: </label>
              <input type="password" name="password" id="password" placeholder="Password"required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3 mt-3">
              <button type="submit" value="Login" class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
  <body>
    <p>
      Don't have an account? <a href = "register">Click here</a> to register!
    </p>
  </body>
  <div class="col"><%- include ('../partials/message') %></div>
  <div style="clear:both"></div>


</main>

<%- include ('../partials/footer') %>